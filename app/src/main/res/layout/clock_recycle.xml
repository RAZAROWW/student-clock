<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="170dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/sunday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/switch1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/saturday"
            android:text="Вс"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/friday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/switch1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/thuesday"
            android:text="Пт" />

        <Button
            android:id="@+id/saturday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/switch1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/friday"
            android:text="Сб" />

        <Button
            android:id="@+id/thuesday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/switch1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/wendsday"
            android:text="Чт" />

        <Button
            android:id="@+id/wendsday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/switch1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/tuesday"
            android:text="Ср" />

        <EditText
            android:id="@+id/clock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Название"
            android:inputType="textPersonName" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/monday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/switch1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:text="Пн" />

        <Button
            android:id="@+id/tuesday"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/switch1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/monday"
            android:text="Вт" />

        <Button
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/clock_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/clock_name"
            android:background="@color/cardview_shadow_end_color"
            android:text="9:00"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>